<div class="container">
    <h2>Brother Directory</h2>

    <nav class="oldrose-background">
      <div class="nav-wrapper">
        <form>
          <div class="input-field">
            <input id="search" type="search" required>
            <label for="search"><i class="material-icons">search</i></label>
            <i class="material-icons">close</i>
          </div>
        </form>
      </div>
    </nav>
    <table class="striped">
        <thead>
            <th>First Name</th>
            <th>Last Name</th>
        </thead>
        <tbody>
            <% @brothers.each do |bro| %>
            <tr>
                <td><%= bro.first %></td>
                <td><%= bro.last %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
